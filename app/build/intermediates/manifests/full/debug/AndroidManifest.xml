<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.mindelements.thinker"
    android:versionCode="72420151"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.mindelements.thinker.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.mindelements.thinker.QuestionActivity"
            android:label="@string/title_activity_question"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.mindelements.thinker.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.mindelements.thinker.SingleQuestionActivity"
            android:label="@string/title_activity_single_question"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.mindelements.thinker.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.mindelements.thinker.WrongAnswerAvtivity"
            android:label="@string/title_activity_wrong_answer_avtivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.mindelements.thinker.QuizResultActivity"
            android:label="@string/title_activity_quiz_result"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.mindelements.thinker.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.mindelements.thinker.QuizListenActivity"
            android:label="@string/title_activity_quiz_listen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.mindelements.thinker.FlashCardActivity"
            android:label="@string/title_activity_flash_card"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>