<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.mindelements.thinker.QuestionActivity"
    android:background="@drawable/bg_image"
    android:id="@+id/questionActivity">


    <TextView android:text=" Memorize question tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quizView"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:layout_marginLeft="32dp"
        android:textStyle="bold"
        android:textColor="#0000CD"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message : Memorize question tool"
        android:textColor="#FFFFFF"
        android:id="@+id/textView4"
        android:layout_below="@+id/quizView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:textSize="13dp"
        android:textStyle="bold"
        />


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:rowCount="4"
        android:columnCount="6"
        android:orientation="horizontal"
        android:layout_marginTop="42dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File to  upload"
            android:id="@+id/textView7"
            android:textColor="#FFFFFF"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member ID"
            android:textColor="#FFFFFF"
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="Select File"
            android:minWidth="100dp"
            android:textAllCaps="false"
            android:onClick="chooseFile"
            android:id="@+id/selectFileButton"
            android:layout_row="0"
            android:layout_column="5" />

        <EditText
            android:minWidth="100dp"
            android:id="@+id/memberIdField"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_width="121dp"
            android:textColor="#FFFFFF"/>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOAD"
        android:id="@+id/uploadButton"
        android:onClick="uploadFile"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/container"
        android:layout_alignRight="@+id/container"
        android:layout_alignEnd="@+id/container" />



    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#06468E"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Copyright Â© 2016"
            android:textColor="#16A085"
            android:textSize="20sp"
            />
    </RelativeLayout>
</RelativeLayout>
