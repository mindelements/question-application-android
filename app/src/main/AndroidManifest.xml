<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wMindElements" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wMindElements.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wMindElements.QuestionActivity"
            android:label="@string/title_activity_question"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wMindElements.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wMindElements.SingleQuestionActivity"
            android:label="@string/title_activity_single_question"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wMindElements.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wMindElements.WrongAnswerAvtivity"
            android:label="@string/title_activity_wrong_answer_avtivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wMindElements.QuizResultActivity"
            android:label="@string/title_activity_quiz_result"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wMindElements.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>
