<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:background="@color/background_floating_material_dark"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:rowCount="9"
        android:columnCount="1"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_above="@+id/footer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Number"
            android:id="@+id/questionNumberLabel"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Set Total Value"
            android:id="@+id/questionSetTotalValueLabel"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Question"
            android:id="@+id/totalQuestionLabel"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of sets done"
            android:id="@+id/numberOfSetsDoneLabel"
            android:layout_row="3"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </GridLayout>

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="wrap_content"
        android:text=" OK "
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>