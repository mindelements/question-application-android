<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.suresh.mindelements.SingleQuestionActivity"
    android:id="@+id/main">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:rowCount="5"
        android:columnCount="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Number"
            android:id="@+id/questionNumberLabel"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Set Total Value"
            android:id="@+id/questionSetTotalValueLabel"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Question"
            android:id="@+id/totalQuestionLabel"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of sets done"
            android:id="@+id/numberOfSetsDoneLabel"
            android:layout_row="3"
            android:layout_column="0"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question:"
        android:id="@+id/textView6"
        android:layout_below="@+id/container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:text="description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionLabel"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_below="@+id/textView6"
        android:paddingLeft="10dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="133dp"
        android:paddingLeft="10dp"
        android:rowCount="2"
        android:columnCount="2"
        android:id="@+id/gridLayout">


        <Button
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="Check Answer"
            android:minWidth="100dp"
            android:textAllCaps="false"
            android:onClick="checkAnswer"
            android:id="@+id/checkAnswerButton"
            android:layout_row="0"
            android:layout_column="0" />
        <Button
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="Next Question"
            android:minWidth="100dp"
            android:textAllCaps="false"
            android:onClick="getNextQuestion"
            android:id="@+id/nextQuestionButton"
            android:layout_row="0"
            android:layout_column="1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:minWidth="100dp"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:id="@+id/answerLabel"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
           />


    </GridLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#06468E"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Copyright Â© 2015"
            android:textColor="#16A085"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radiogroup"
        android:layout_toRightOf="@+id/radiogroup"
        android:layout_toEndOf="@+id/radiogroup"
        android:layout_above="@+id/gridLayout"
        android:id="@+id/linearLayout2"></LinearLayout>
</RelativeLayout>
