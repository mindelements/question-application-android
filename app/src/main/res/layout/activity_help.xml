<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_image"
    tools:context="com.suresh.mindelements.HelpActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingLeft="10dp"
        android:id="@+id/quizScrollView"
        android:layout_above="@+id/footer"
        android:layout_alignParentTop="true">
        <TableLayout
            android:id="@+id/mainTable"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            >

            <TextView android:text="Please"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:id="@+id/requestView" />

            <TextView android:text="Mind Elements : Help your mind help you!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:id="@+id/application" />

            <TextView android:text="Mind Elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingTop="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_below="@+id/application"
                android:layout_alignLeft="@+id/application"
                android:layout_alignStart="@+id/application" />

            <TextView android:text="description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:paddingTop="20dp"
                android:textColor="#FFFFFF"
                android:id="@+id/description"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignRight="@+id/application"
                android:layout_alignEnd="@+id/application" />

            <TextView android:text="description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:paddingTop="15dp"
                android:textColor="#FFFFFF"
                android:id="@+id/description2"
                android:layout_below="@+id/description"
                android:layout_alignLeft="@+id/description"
                android:layout_alignStart="@+id/description" />

            <TextView android:text="email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:paddingTop="50dp"
                android:textColor="#FFFFFF"
                android:id="@+id/emailView"
                android:textColorLink="@android:color/white"
                android:layout_below="@+id/description2"
                android:layout_alignLeft="@+id/description2"
                android:layout_alignStart="@+id/description2" />

            <TextView android:text="website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:id="@+id/webpageView"
                android:textColorLink="@android:color/white"
                android:layout_below="@+id/emailView"
                android:layout_alignLeft="@+id/emailView"
                android:layout_alignStart="@+id/emailView" />
        </TableLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#06468E"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Copyright Â© 2015"
            android:textColor="#16A085"
            android:textSize="20sp"
            />
    </RelativeLayout>

</RelativeLayout>
